<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
         
         <record id="view_hr_employee_custody_form_inherit" model="ir.ui.view">
             <field name="name">hr.employee.form.inherit</field>
             <field name="model">hr.employee</field>
             <field name="inherit_id" ref="hr.view_employee_form"/>
             <field name="arch" type="xml">
                 <xpath expr="//div[@name='button_box']" position="inside">
                        <button name="action_open_custody" class="oe_stat_button" icon="fa-tasks" type="object" groups="hr.group_hr_manager">
                            <field name="custody_count" widget="statinfo" string="Custody"/>
                        </button>
                 </xpath>
             </field>
         </record>
        
    
    </data>
</odoo>