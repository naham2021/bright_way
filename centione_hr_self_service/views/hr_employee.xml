<odoo>
    <data>
        <record id="view_he_employee_excuse_form" model="ir.ui.view">
            <field name="name">Excuse configuration for employee form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="excuses" string="Excuses">
                        <group>
                            <field name="number_excuse_per_month"/>
                            <field name="max_excuse_period"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>