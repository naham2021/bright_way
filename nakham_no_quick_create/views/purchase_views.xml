<odoo>
  <data>
        <!-- Inherit Form View to Modify it -->
        <record id="purchase_order_form_quick" model="ir.ui.view">
            <field name="name">purchase.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="replace">
                                                <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'supplier', 'show_vat': True}" placeholder="Name, TIN, Email, or Reference" options='{"no_create": True,"no_create_edit": True, "no_quick_create": True}'/>

<!--                            <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" options='{"always_reload": True,"no_create": True,"no_create_edit": True, "no_quick_create": True}'/>-->
                </xpath>

            </field>
        </record>

      <record id="purchase_order_form_quick_group" model="ir.ui.view">
            <field name="name">purchase.order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
                <field name="groups_id" eval="[(6,0,[ref('nakham_no_quick_create.group_quick_create')])]"/>

            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="replace">
                                                <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'supplier', 'show_vat': True}" placeholder="Name, TIN, Email, or Reference" />

<!--                            <field name="partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" options='{"always_reload": True,"no_create": True,"no_create_edit": True, "no_quick_create": True}'/>-->
                </xpath>

            </field>
        </record>
  </data>
</odoo>